function ssh-vm(){
  rssh jmolet-vm${1}
}

function ssh-vm-vnc(){
  vncviewer jmolet-vm${1}.usersys.redhat.com:2 --DesktopSize=1024x768
}

function ssh-vm-console(){
  console-connect xanadu.usersys.redhat.com jmolet-vm${1}
}


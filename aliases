function ssa() {
    cd ~/Projects/spine
    ssh ansibler@$(env/bin/python script/node_selector.py ${1})
}

function ssap() {
    cd ~/Projects/spine
    export PURGE_EC2_CACHE=true
    ssh ansibler@$(env/bin/python script/node_selector.py ${1})
}

function i() {
    cd ~/Projects/spine
    source env/bin/activate
    ansible/inventory/ec2
}

